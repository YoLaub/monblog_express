<!DOCTYPE html>
<%
const isEdit = typeof blogpost !== 'undefined';
const actionUrl = isEdit ? `/posts/update/${blogpost._id}` : '/posts/store';
%>
<html lang="fr">
<%- include('layouts/header') %>

<body>
<%- include('layouts/navbar') %>

<header class="masthead" style="background-image: url('/assets/img/contact-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="page-heading">
                    <h1><%= isEdit ? "Modifier le post" : "Nouveau Post" %></h1>
                    <span class="subheading">Partagez vos idées avec le monde</span>
                </div>
            </div>
        </div>
    </div>
</header>

<main class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Erreur !</strong> <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <form action="<%= actionUrl %>" method="POST" enctype="multipart/form-data" id="postForm">

                    <!-- Titre -->
                    <div class="form-floating mb-3">
                        <input class="form-control" id="title" name="title" type="text"
                               value="<%= isEdit ? blogpost.title : '' %>"
                               placeholder="Titre de l'article" required maxlength="200" />
                        <label for="title">Titre</label>
                    </div>

                    <!-- Contenu-->
                    <div class="mb-3">
                        <label class="form-label">Contenu</label>

                        <!-- HTML initial (uniquement utile en edit) -->
                        <input type="hidden" id="initialBody" value="<%- isEdit ? blogpost.body : '' %>">

                        <!-- Zone Quill (vide, remplie en JS) -->
                        <div id="editor" style="height: 300px; background: white;"></div>

                        <!-- Champ envoyé au serveur -->
                        <input type="hidden" name="body" id="body">
                    </div>

                    <!-- Image actuelle -->
                    <% if (isEdit && blogpost.image) { %>
                        <div class="mb-3">
                            <p class="small text-muted">Image actuelle :</p>
                            <img src="<%= blogpost.image %>" class="img-thumbnail" style="height: 100px">
                        </div>
                    <% } %>

                    <!-- Image upload -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Image de couverture</label>
                        <input class="form-control" type="file" id="image" name="image"
                               accept="image/jpeg,image/jpg,image/png,image/webp" />
                        <div class="form-text">Formats acceptés : JPG, PNG, WEBP. Taille max : 5 Mo.</div>
                    </div>

                    <!-- Preview -->
                    <div id="imagePreview" class="mb-3" style="display:none;">
                        <img id="preview" src="" alt="Prévisualisation" class="img-fluid rounded" style="max-height: 300px;" />
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/" class="btn btn-secondary">Annuler</a>
                        <button class="btn btn-primary" type="submit">
                            Publier
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</main>

<%- include('layouts/footer') %>
<%- include('layouts/scripts') %>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script>
    // Preview image
    document.getElementById('image').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (!file) return;

        const reader = new FileReader();
        reader.onload = function(event) {
            document.getElementById('preview').src = event.target.result;
            document.getElementById('imagePreview').style.display = 'block';
        };
        reader.readAsDataURL(file);
    });

    // Quill init (un seul #editor)
    const quill = new Quill('#editor', {
        theme: 'snow',
        modules: {
            toolbar: [
                [{ 'header': [1, 2, 3, false] }],
                ['bold', 'italic', 'underline', 'strike'],
                ['blockquote', 'code-block'],
                [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                ['link', 'clean']
            ]
        }
    });

    const initial = document.getElementById('initialBody').value;
    if (initial) quill.root.innerHTML = initial;

    document.getElementById('postForm').addEventListener('submit', function (e) {
        document.getElementById('body').value = quill.root.innerHTML;

        if (quill.getText().trim().length === 0) {
            alert("Le contenu ne peut pas être vide");
            e.preventDefault();
        }
    });

</script>
</body>
</html>
